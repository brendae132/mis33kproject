@model FinalProject_Team12.Models.Order

@{
    ViewBag.Title = "AvailableSeats";
}

<h2>AvailableSeats</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Select A Seat</h4>
        <hr />

        <div class="form-group">
            <label class="control-label col-md-2">Select A Seat</label>
            <div class="col-md-10">
                @Html.ListBox("AvailableSeats", (MultiSelectList)ViewBag.AvailableSeats, new { @class = "form-control" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Checkout" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Checkout")
</div>
