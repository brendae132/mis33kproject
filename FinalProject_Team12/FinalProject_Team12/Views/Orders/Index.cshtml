@model IEnumerable<FinalProject_Team12.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Orders</h2>

<p>
    @Html.ActionLink("Buy Movie Tickets", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FutureShowings)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PastPurchases)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CancelledOrder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FutureShowings)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PastPurchases)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CancelledOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.OrderID }) |
                @Html.ActionLink("Details", "Details", new { id = item.OrderID })
            </td>
        </tr>
    }

</table>
